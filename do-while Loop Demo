// If Loops
// This demonstrates how do-while loops function by counting to the number given by the user.
// I attest this project is entirely my work. 
// I did not copy from another person or source.

#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
	int count, number;
	count = 0;

	cout << "Choose a number between 1-100" << endl;
	cin >> number;

	if (number < 0 || number > 100)
	{
		cout << "Please choose a number between 0 and 100 " << endl;
		cin >> number;
	}

	do
	{
		count++;
		cout << count << endl;
	} while (count != number);

	cout << "This program has successfully counted to " << number << endl;

	system("pause");
	return 0;
}

// If Loops
// This demonstrates how if loops function by counting to the number given by the user.
// I attest this project is entirely my work. 
// I did not copy from another person or source.

#include <iostream>
using namespace std;

main ()
{
   int count, number;
   number = 0;
   
   cout << "Please insert a positive number" << endl;
   cin >> number;
   
   if (number < 0 || number > 100)
   {
      cout << "Please insert a number between 1-100";
      cin >> number;
   }
   
   if (count <= number)
   {
      count++;
      cout << count << endl;
   }
   
   system("pause");
   return 0;
}
   
   
